<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team56.mrurt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat" >
        <activity android:name="team56.mrurt.activity.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="team56.mrurt.activity.LoginActivity" >
        </activity>
        <activity android:name="team56.mrurt.activity.RegisterActivity" >
        </activity>
        <activity android:name="team56.mrurt.activity.HomepageActivity" >
        </activity>
        <activity android:name="team56.mrurt.activity.ProfileActivity" >
        </activity>
        <activity android:name="team56.mrurt.activity.MenuActivity" >
        </activity>
        <activity
            android:name="team56.mrurt.activity.MovieListActivity"
            android:label="@string/title_movie_list"
            android:parentActivityName="team56.mrurt.activity.HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomepageActivity" />
        </activity>
        <activity
            android:name="team56.mrurt.activity.MovieDetailActivity"
            android:label="@string/title_movie_detail"
            android:parentActivityName="team56.mrurt.activity.MovieListActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MovieListActivity" />
        </activity>
        <activity android:name="team56.mrurt.activity.SearchMovieActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name="team56.mrurt.activity.RecommendMovieActivity" >
            <intent-filter>
                <action android:name="android.intent.action.RECOMMEND" />
            </intent-filter>
        </activity>
        <activity
            android:name="team56.mrurt.activity.RecommendListActivity"
            android:label="@string/title_movie_list"
            android:parentActivityName="team56.mrurt.activity.HomepageActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.HomepageActivity" />
        </activity>
        <activity android:name="team56.mrurt.activity.AdminActivity" >
        </activity>
    </application>

</manifest>